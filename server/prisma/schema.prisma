generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int                @id @default(autoincrement())
  email                 String             @unique
  password              String
  full_name             String             @default("")
  emergency_contact     String             @default("")
  role                  String             @default("USER")
  department            String             @default("GENERAL")
  boss_id               String?
  access_permissions    String[]           @default([])
  createdAt             DateTime           @default(now())
  updatedAt             DateTime           @updatedAt
  incidents             Incident[]
  ppe                   PPE[]
  camera                Camera[]
  receivedNotifications UserNotification[]
}

model PPE {
  id                   Int      @id
  type                 String
  status               String
  last_inspection_date DateTime
  assigned_to_user     User     @relation(fields: [assigned_to_user_id], references: [id])
  assigned_to_user_id  Int
}

model Camera {
  id                    Int        @id @default(autoincrement())
  location              String
  status                String
  last_maintenance      DateTime
  rtsp_address          String?
  resolution            String
  responsible_person    User       @relation(fields: [responsible_person_id], references: [id])
  responsible_person_id Int
  incidents             Incident[]
}

model Incident {
  id                    Int      @id @default(autoincrement())
  timestamp             DateTime
  type                  String
  severity              Int
  detected_by_camera    Camera   @relation(fields: [detected_by_camera_id], references: [id])
  detected_by_camera_id Int
  worker                User?     @relation(fields: [worker_id], references: [id])
  worker_id             Int?
  status                String
}

model Notification {
  id          Int                @id @default(autoincrement())
  timestamp   DateTime
  type        String
  message     String
  read_status Boolean
  recipients  UserNotification[]
}

model UserNotification {
  userId         Int
  notificationId Int
  user           User         @relation(fields: [userId], references: [id])
  notification   Notification @relation(fields: [notificationId], references: [id])

  @@id([userId, notificationId])
}
